<%= form_with url: "/customers/#{@customer.id}", method: :patch do |form| %>
  <p><%= form.label :first_name, "First Name:" %></p>
  <%= form.text_field :first_name %>
  <p><%= form.label :last_name, "Last Name:" %></p>
  <%= form.text_field :last_name %>
  <p><%= form.label :in_usa, "In USA?" %></p>
  <%= form.text_field :in_usa %>
  <p><%= form.label :credit_score, "Credit Score:" %></p>
  <%= form.text_field :credit_score %>
  <p><%= form.submit "Submit" %></p>
<% end %>